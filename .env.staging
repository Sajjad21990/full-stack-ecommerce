# App Configuration
NEXT_PUBLIC_SITE_URL=https://your-app.up.railway.app
NODE_ENV=production

# Database - Railway auto-injects as DATABASE_URL
# No need to set this - Railway provides it automatically
# DATABASE_URL will be auto-injected

# NextAuth Configuration
NEXTAUTH_URL=https://your-app.up.railway.app
NEXTAUTH_SECRET=generate_a_strong_secret_here

# Email Provider - Use console logging for staging
EMAIL_FROM=noreply@example.com
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=

# Razorpay Configuration (test keys)
RAZORPAY_KEY_ID=rzp_test_your_key
RAZORPAY_KEY_SECRET=your_test_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Redis Configuration - Railway auto-injects as REDIS_URL
# No need to set this - Railway provides it automatically
# REDIS_URL will be auto-injected

# Skip Meilisearch for staging
MEILISEARCH_URL=
MEILISEARCH_MASTER_KEY=

# Firebase Storage Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
# Database Configuration
# Railway automatically provides this when you add PostgreSQL service
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis Configuration  
# Railway automatically provides this when you add Redis service
REDIS_URL=${{Redis.REDIS_URL}}

# NextAuth Configuration
# Your Railway app URL (e.g., https://your-app.up.railway.app)
NEXTAUTH_URL=https://your-app.up.railway.app
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# Payment Gateway - Razorpay (Optional)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxx

# Firebase Configuration (For Image Upload)
# Server-side (from service account JSON)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Client-side Firebase (from web app config)
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:xxxxxxxxxxxxx

# Optional Services (Not required for basic setup)
# UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=xxxxx

# Email Service (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Admin Setup (First admin user)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecurePassword123!
